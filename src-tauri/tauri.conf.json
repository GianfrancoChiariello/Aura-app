{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "aura-app",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "notification": {
        "all": true 
      },
      "fs": {
        "scope": ["$DOWNLOAD/*"]
      },
      "app": {
        "all": true,
        "show": true,
        "hide": true
      },
      "dialog": {
        "all": true, 
        "ask": true,
        "confirm": true, 
        "message": true,
        "open": true, 
        "save": true
      },
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      },
      "window": {
        "close": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setResizable": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.aura.alpha",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": ["es-ES","en-US","pt-PT"]
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": ["https://github.com/GianfrancoChiariello/Aura-app/releases/download/main/Aura-app_0.0.1_x64_es-ES.msi"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNGRTU2QTI0QjMyNUYyMzUKUldRMThpV3pKR3JsUHdpRm9WQ2JpS2g0OFNid3N4cEREYmNNTmIzSStqUjZrRm9QYkF0eWFIUnQK",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "decorations": false,
        "maximized": true,
        "fullscreen": false,
        "resizable": true,
        "minWidth": 1000,
        "minHeight": 720,
        "title": "aura-app-alpha v1"
      }
    ]
  }
}
